{
  "compilerOptions": {
    "outDir": "dist/",
    "lib": ["es2017"],
    "module": "commonjs",
    "moduleResolution": "node",
    "target": "es2017",
    "skipLibCheck": true,
    "experimentalDecorators": true,
    "resolveJsonModule": true,
    "emitDecoratorMetadata": true,
    "noEmitOnError": false,
    "strictFunctionTypes": false,
    "sourceMap": true
  }
}
