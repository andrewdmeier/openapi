{
  "name": "openapi",
  "version": "1.0.0",
  "scripts": {
    "ddev": "yarn dup && yarn docd run --rm --service-ports api",
    "dtest": "yarn drun test",
    "dtest:debug": "yarn doct run --rm --service-ports task yarn test:debug",
    "dlint": "yarn drun lint",
    "lint": "tslint 'packages/**/*.ts?(x)'",
    "test": "jest",
    "test:debug": "node --inspect-brk=0.0.0.0:9229 ./node_modules/.bin/jest --runInBand --detectOpenHandles",
    "dev": "yarn && nodemon -e js,ts,graphql -x 'yarn dev:debug'",
    "dev:debug": "node --inspect=0.0.0.0:9229 -r ts-node/register packages/server/index.ts | pino-pretty --translateTime",
    "build": "tsc --build tsconfig.json",
    "docd": "docker-compose -f docker-compose.yml -f docker-compose.dev.yml",
    "doct": "yarn docd -f docker-compose.task.yml",
    "drun": "yarn doct run --rm task yarn",
    "dinstall": "yarn doct run --rm task chown -R node:node .; yarn drun install",
    "dup": "yarn docd up -d redis",
    "gen:gql": "lerna run gen:gql --parallel",
    "clean": "yarn drun lerna clean"
  },
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.ts": [
      "tslint --fix",
      "git add"
    ]
  },
  "keywords": [],
  "devDependencies": {
    "@playlyfe/gql": "^2.6.1",
    "@types/body-parser": "^1.17.0",
    "@types/express": "^4.16.0",
    "@types/ioredis": "^4.0.4",
    "@types/jest": "^23.3.10",
    "@types/jest-matchers": "^20.0.1",
    "@types/node": "^10.12.17",
    "@types/pino": "^5.8.3",
    "@types/prettier": "^1.15.2",
    "graphql-request": "^1.8.2",
    "husky": "^1.3.0",
    "jest": "^23.6.0",
    "jest-extended": "^0.11.0",
    "lerna": "^3.8.0",
    "lint-staged": "^8.1.0",
    "nodemon": "^1.18.9",
    "pino-pretty": "^2.5.0",
    "prettier": "^1.15.3",
    "ts-jest": "^23.10.5",
    "ts-node": "^7.0.1",
    "tslint": "^5.12.0",
    "tslint-plugin-prettier": "^2.0.1",
    "typescript": "^3.2.2"
  }
}
